<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="core.block.service.part.class">Core\BlockBundle\Block\BlockPartService</parameter>
        <parameter key="core.block.service.part_package.class">Core\BlockBundle\Block\BlockPartPackageService</parameter>
        <parameter key="core.block.service.header_nav_bar.class">Core\BlockBundle\Block\BlockHeaderNavBarService</parameter>
        <parameter key="core.block.service.audience.class">Core\BlockBundle\Block\BlockAudienceService</parameter>
        <parameter key="core.block.service.notification.class">Core\BlockBundle\Block\BlockNotificationService</parameter>
    </parameters>

    <services>
        <service id="core.block.service.part" class="%core.block.service.part.class%">
            <tag name="sonata.block" />
            <argument>core.block.part</argument>
            <argument type="service" id="templating" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="session" />
            <argument type="service" id="service_container" />
        </service>

        <service id="core.block.service.part_package" class="%core.block.service.part_package.class%">
            <tag name="sonata.block" />
            <argument>core.block.part_package</argument>
            <argument type="service" id="templating" />
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>

        <service id="core.block.service.header_nav_bar" class="%core.block.service.header_nav_bar.class%">
            <tag name="sonata.block" />
            <argument>core.block.header_nav_bar</argument>
            <argument type="service" id="templating" />
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>

        <service id="core.block.service.audience" class="%core.block.service.audience.class%">
            <tag name="sonata.block" />
            <argument>core.block.audience</argument>
            <argument type="service" id="templating" />
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>

        <service id="core.block.service.notification" class="%core.block.service.notification.class%">
            <tag name="sonata.block" />
            <argument>core.block.notification</argument>
            <argument type="service" id="templating" />
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>
    </services>
</container>

